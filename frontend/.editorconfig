# Editor configuration, see https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.json]
indent_size = 2

[*.ts]
quote_type = single

[**/i18n/*.yml]
indent_size = 2
